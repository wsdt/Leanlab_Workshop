<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    tools:context="fhku.leanlabapp.LastActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/erfolg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/level"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/geschafft"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Level 1"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/currentPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_toLeftOf="@+id/mitte"
            android:text="Punkte 30" />

        <TextView
            android:id="@+id/mitte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="|" />

        <TextView
            android:id="@+id/maxPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/mitte"
            android:text="Punkte 80" />

        <Button
            android:id="@+id/btnBackToStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentPoints"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Zurück zum Hauptmenü" />

    </RelativeLayout>
</ScrollView>