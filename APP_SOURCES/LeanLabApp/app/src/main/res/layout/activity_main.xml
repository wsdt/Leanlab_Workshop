<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trennstrich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="|" />

            <TextView
                android:id="@+id/station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/edittext"
                android:layout_alignEnd="@+id/trennstrich"
                android:layout_alignTop="@+id/trennstrich"
                android:layout_marginRight="20dp"
                android:text="  Array A  " />

            <TextView
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/trennstrich"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="  Array B" />

            <TextView
                android:id="@+id/htmltext"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/trennstrich"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:contentDescription="Html text"
                android:id="@+id/btnCamera"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/htmltext"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp"
                 />

            <VideoView
                android:id="@+id/btnVideo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/btnCamera"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />


            <TextView
                android:id="@+id/trennstrich1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnVideo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="|" />

            <TextView
                android:id="@+id/currentstep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/trennstrich"
                android:layout_below="@+id/btnVideo"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Schritt 2" />

            <TextView
                android:id="@+id/maxstep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/trennstrich"
                android:layout_below="@+id/btnVideo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Schritt 10" />

            <!--
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/trennstrich1"

                android:text="  Schritt 1 &lt; Schritt 2 &gt; Schritt 3 "/>

                -->

        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imgbtnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorWhite"
        android:src="@drawable/ic_shortcut_chevron_left">

    </ImageButton>

    <ImageButton
        android:id="@+id/imgbtnforward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/colorWhite"
        android:src="@drawable/ic_shortcut_chevron_right"></ImageButton>

</RelativeLayout>